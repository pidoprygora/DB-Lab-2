@model ManeskinDomain.Model.Clip

@{
    ViewData["Title"] = "Create";
}

<h1>Add new clip to the song @ViewBag.SongName</h1>

<h4>Clip</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="DataRelease" class="control-label"></label>
                <input asp-for="DataRelease" class="form-control" />
                <span asp-validation-for="DataRelease" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MadeBy" class="control-label"></label>
                <input asp-for="MadeBy" class="form-control" />
                <span asp-validation-for="MadeBy" class="text-danger"></span>
            </div>

            <input type="hidden" value="@ViewBag.SongId" name="SongId"

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
